{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests",
    "**/*.spec.ts"
  ]
}
